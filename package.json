{
  "name": "root",
  "private": true,
  "devDependencies": {
    "lerna": "3.22.1",
    "husky": "4.3.0"
  },
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "start": "lerna run start --stream",
    "watch": "lerna run start:dev --stream",
    "build": "lerna run build --stream",
    "test:e2e": "lerna run test:e2e --stream",
    "lint": "lerna run lint --stream"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lerna run precommit"
    }
  }
}
